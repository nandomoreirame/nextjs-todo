# https://editorconfig.org
# my .editorconfig ~> https://gist.github.com/nandomoreirame/1810085f0e48214fc07d5371459851fa
# by nandomoreira.dev
root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
max_line_length = 100

[**.{min.js,min.css}]
indent_style = ignore
insert_final_newline = ignore

[*.{md,env,env.*,nvmrc,npmrc,prettierignore,prettierrc}]
insert_final_newline = false
trim_trailing_whitespace = false

[*.{md,json}]
insert_final_newline = false
